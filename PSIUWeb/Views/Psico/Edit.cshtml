@model Psico

<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-6">
                <h1 class="m-0">
                    CADASTRO: <small>Psicólogo</small>
                </h1>
            </div>

            <div class="col-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-action= "Index"
                        asp-controller= "Psico">
                        Listagem                    
                        </a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="container">
    <div class ="row">
        <form asp-action ="Edit"
        style= "width: 100%,">
             <div asp-validation-summary = "ModelOnly"></div>
             <input typeof="hidden" asp-for = "Id"/>

             <div class="row">
                 <div class="col-12">
                     <div class="form-group">
                         <label asp-for="Name" class="controll-label"></label>
                         <input asp-for="Name" class="form-control" />
                         placeholder="Nome completo"/>
                         <span asp-validation-for="Name" class="text-danger"></span>
                     </div>
                 </div>
             </div>



             <div class="row">
                 <div class="col-12">
                     <div class="form-group">
                         <label asp-for="CRP" class="controll-label"></label>
                         <input asp-for="CRP" class="form-control" />
                         placeholder="__/_____-is"/>
                         <span asp-validation-for="BirthDate" class="text-danger"></span>

                     </div>
                     </div>

                 </div>



<div class="row">
                 <div class="col-12">
                     <div class="form-group">
                         <label asp-for="BirthDate" class="controll-label"></label>
                         <input asp-for="BirthDate" class="form-control" />
                         placeholder="--/--/--"/>
                         <span asp-validation-for="BirthDate" class="text-danger"></span>

                     </div>
                     </div>

                 </div>



                 <div class="row">
                 <div class="col-12">
                     <div class="form-group">
                         <label asp-for="Weight" class="controll-label"></label>
                         <input asp-for="Weight" class="form-control" />
                         placeholder="Weight"/>
                         <span asp-validation-for="Weight" class="text-danger"></span>

                     </div>
                     </div>
                 </div>

             



                 <div class="row">
                 <div class="col-12">
                     <div class="form-group">
                         <label asp-for="Height" class="controll-label"></label>
                         <input asp-for="Height" class="form-control" 
                         placeholder="Height"/>
                         <span asp-validation-for="Height" class="text-danger"></span>

                     </div>

                 </div>

             

                 <div class="row">
                     <div class="col-12">
                         <div class="form-group">
                             <label asp-for="Race" class="control-label">
                                 <select asp-for="Race"
                                 asp-items="Html.GetEnumSelectList<Race>()"
                                     class="form-control">
                                     <option selected="selected"
                                     value="">
                                     selecione a raça

                                     </option>

                                 </select>
                                     

                             </label>
                         </div>
                     </div>

                 </div>

             
        </form>
    </div>

</div>
